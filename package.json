{
  "name": "typescript-example-01",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx",
    "check": "tsc -p tsconfig.json --noEmit",
    "check:backend": "tsc -p tsconfig.backend.json --noEmit",
    "test": "vitest",
    "test:backend": "npx dotenv-cli -e .env.test -- vitest run --config vitest.backend.config.ts",
    "test:examples": "npx dotenv-cli -e .env.test -- vitest run --config vitest.examples.config.ts",
    "test:backend:coverage": "npx dotenv-cli -e .env.test -- vitest run --config vitest.backend.config.ts --coverage",
    "test:examples:coverage": "npx dotenv-cli -e .env.test -- vitest run --config vitest.examples.config.ts --coverage",
    "build:backend": "tsc -p tsconfig.build.json",
    "lint": "eslint \"{backend,examples,frontend}/**/*.{ts,tsx}\"",
    "format": "prettier --write \"{backend,examples,frontend}/**/*.{ts,tsx,css,md,json}\"",
    "format:check": "prettier --check \"{backend,examples,frontend}/**/*.{ts,tsx,css,md,json}\"",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:test:up": "docker compose -f docker-compose.test.yml up -d",
    "db:test:down": "docker compose -f docker-compose.test.yml down",
    "prisma:generate": "prisma generate --schema backend/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema backend/prisma/schema.prisma",
    "test:db": "npx dotenv-cli -e .env.test -- vitest"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@prisma/client": "^5.22.0",
    "fastify": "^4.29.0",
    "jsonwebtoken": "^9.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.9",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^2.1.9",
    "dotenv-cli": "^7.4.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.1.0",
    "prettier": "^3.8.1",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "tsx": "^4.16.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  }
}
